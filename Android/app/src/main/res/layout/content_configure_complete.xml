<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Views.ConfigureCompleteActivity"
    tools:showIn="@layout/activity_configure_complete">

    <Button
        android:id="@+id/PlanetTradeButton"
        android:layout_width="296dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="236dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Trade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlanetScreen_PlanetName" />

    <Button
        android:id="@+id/TravelButton"
        android:layout_width="296dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Travel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlanetTradeButton" />

    <Button
        android:id="@+id/PlayerInventoryButton"
        android:layout_width="296dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Inventory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TravelButton" />

    <TextView
        android:id="@+id/PlanetScreenCaptainName"
        android:layout_width="302dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_horizontal"
        android:text="Captain"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/PlanetScreen_PlanetName"
        android:layout_width="174dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Current Planet name"
        android:textSize="15sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PlanetScreenCaptainName" />

    <TextView
        android:id="@+id/Xpointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="X = "
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/PlanetScreen_PlanetName"
        app:layout_constraintTop_toBottomOf="@+id/PlanetScreen_PlanetName" />

    <TextView
        android:id="@+id/Ypointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:text="Y = "
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/PlanetScreen_PlanetName"
        app:layout_constraintTop_toBottomOf="@+id/PlanetScreen_PlanetName" />

    <TextView
        android:id="@+id/Xoutput"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="0"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/Xpointer"
        app:layout_constraintTop_toBottomOf="@+id/PlanetScreen_PlanetName" />

    <TextView
        android:id="@+id/Youtput"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="0"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/Ypointer"
        app:layout_constraintTop_toBottomOf="@+id/PlanetScreen_PlanetName" />

    <TextView
        android:id="@+id/FuelBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="   Fuel: "
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/FuelRemaining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="100"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/FuelBar"
        app:layout_constraintEnd_toStartOf="@+id/TotalFuel" />

    <TextView
        android:id="@+id/TotalFuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="8dp"
        android:text="/ 100"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/FuelBar"
        app:layout_constraintEnd_toEndOf="@+id/FuelBar" />
</android.support.constraint.ConstraintLayout>